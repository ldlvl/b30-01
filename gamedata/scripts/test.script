function gg_have_this_bamazhka( sect )
    local tbl = xray_vars.load_table( nlc_vars, "tbl_pap", {} )
    if tbl ~= nil then
        misc.dump_table( tbl )
        for _, k in ipairs( tbl ) do
            if k == sect then return true end
        end
    end
    return false
end

